<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/kanji_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@android:color/black"
        android:text="愛"
        android:textSize="64sp"/>

    <TextView
        android:id="@+id/meaning_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/kanji_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:textSize="20sp"
        android:text=" incense, smell, perfume"/>

    <TextView
        android:id="@+id/subtitle_text"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/meaning_text"
        app:layout_constraintStart_toStartOf="@id/meaning_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="2dp"
        android:textSize="16sp"
        android:text="11 strokes, JLPT N3" />

    <TextView
        android:id="@+id/kun_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/subtitle_text"
        app:layout_constraintStart_toStartOf="@id/subtitle_text"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/kun_label" />

    <TextView
        android:id="@+id/kun_text"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@id/kun_label"
        app:layout_constraintStart_toEndOf="@id/kun_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="かおり" />
    <TextView
        android:id="@+id/on_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/kun_text"
        app:layout_constraintStart_toStartOf="@id/kun_label"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/on_label" />

    <TextView
        android:id="@+id/on_text"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@id/on_label"
        app:layout_constraintStart_toEndOf="@id/on_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="かおり" />
</androidx.constraintlayout.widget.ConstraintLayout>